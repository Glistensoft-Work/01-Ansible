<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>TerraServer Sensu Notification</title>
</head>
<body>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr><td align="center" valign="top">
      <table width="650" border="1" cellpadding="10" cellspacing="0">
        <tr>
          <td>Status: </td>
<% if status_to_string == "OK" %>
          <td bgcolor="green"><%= status_to_string %></td>
<% else %>
          <td bgcolor="orange"><%= status_to_string %></td>
<% end %>
        </tr>
        <tr>
          <td>Admin GUI: </td>
          <td><%= admin_gui %></td>
        </tr>
        <tr>
          <td>Host: </td>
          <td><%= @event['client']['name'] %></td>
        </tr>
        <tr>
          <td>Timestamp: </td>
          <td><%= Time.at(@event['check']['issued']) %></td>
        </tr>
        <tr>
          <td>Address: </td>
          <td><%= @event['client']['address'] %></td>
        </tr>
        <tr>
          <td>Check Name: </td>
          <td><%= @event['check']['name'] %></td>
        </tr>
        <tr>
          <td>Command: </td>
          <td><%= command %></td>
        </tr>
        <tr>
          <td>Output: </td>
<% if status_to_string == "OK" %>
          <td><font color="green"><%= output %></font></td>
<% else %>
          <td><font color="red"><%= output %></font></td>
<% end %>
        </tr>
        <tr>
          <td>Occurrances: </td>
          <td><%= @event['occurrences'] %></td>
        </tr>
        <tr>
     </table>
    </td>
   </tr>
  </table>
</body>
</html>

